---
import Layout from '../layouts/Layout.astro';
import CardStack from '../components/CardStack.astro';
import Marquee from '../components/Marquee.astro';
import TriangleRain from '../components/TriangleRain.astro';
import CardInteractions from '../components/CardInteractions.astro';

// Define the content categories that will have CardStacks
const contentCategories = [
  { name: 'Projects', key: 'project', type: 'holographic' },
  { name: 'Blog', key: 'blog', type: 'normal' },
  { name: 'GitHub', key: 'github', type: 'holographic' }
];
---

<Layout title="Portfolio - Raining Pyramids Tech Cards">
  <Marquee text="Welcome to my portfolio â€¢ Click on the card stacks to explore projects, blog posts, and GitHub repositories" />
  
  <TriangleRain />
  
  <div class="container">
    <div class="grid" id="grid">
      {contentCategories.map((category) => (
        <CardStack 
          text={category.name} 
          category={category.key}
          type={category.type as 'normal' | 'holographic'}
        />
      ))}
    </div>
  </div>
  
  <CardInteractions />
</Layout>
