---
import Layout from '../layouts/Layout.astro';
import CategoryButton from '../components/CategoryButton.astro';
import Marquee from '../components/Marquee.astro';
import TriangleRain from '../components/TriangleRain.astro';
import CardInteractions from '../components/CardInteractions.astro';
import SearchBox from '../components/SearchBox.astro';

// Define the content categories
const contentCategories = [
  { name: 'Projects', key: 'project' },
  { name: 'Blog', key: 'blog' },
  { name: 'GitHub', key: 'github' }
];
---

<Layout title="Portfolio - Raining Pyramids Tech Cards">
  <Marquee text="Welcome to my portfolio â€¢ Click on the card stacks to explore projects, blog posts, and GitHub repositories" />
  
  <TriangleRain />
  
  <div class="container">
    <SearchBox />
    <div class="button-grid" id="grid">
      {contentCategories.map((category) => (
        <CategoryButton 
          text={category.name} 
          category={category.key}
        />
      ))}
    </div>
  </div>
  
  <CardInteractions />
</Layout>
