---
import Layout from '../layouts/Layout.astro';
import CategoryButton from '../components/CategoryButton.astro';
import TriangleRain from '../components/TriangleRain.astro';
import CardInteractions from '../components/CardInteractions.astro';
import SearchBox from '../components/SearchBox.astro';
import ThemeToggle from '../components/ThemeToggle.astro';

// Define the content categories
const contentCategories = [
  { name: 'Projects', key: 'project' },
  { name: 'Blog', key: 'blog' },
  { name: 'GitHub', key: 'github' }
];
---

<Layout title="Portfolio - Raining Pyramids Tech Cards">
  <ThemeToggle />
  
  <TriangleRain />
  
  <div class="container">
    <SearchBox />
    <div class="grid" id="grid">
    </div>
  </div>

  <style>
    .grid {
      display: none;
    }
  </style>
  
  <CardInteractions />
</Layout>
