---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- PrismJS CSS for syntax highlighting -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
  </head>
  <body>
    <slot />
    
    <!-- PrismJS JavaScript for syntax highlighting - Load synchronously in order -->
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-javascript.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-typescript.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-python.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-rust.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-bash.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-json.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-yaml.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-markdown.min.js"></script>
  </body>
</html>

<style is:global>
  :root {
    --bg-body: linear-gradient(to bottom, #f5f5dc 0%, #faf0e6 50%, #f5f5dc 100%);
    --marquee-bg: linear-gradient(135deg, #ffd700, #b8860b);
    --marquee-text: #000;
    --search-bg: #fff;
    --search-text: #000;
    --search-border: #daa520;
    --search-placeholder: #999;
  }

  [data-theme="dark"] {
    --bg-body: linear-gradient(to bottom, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
    --marquee-bg: linear-gradient(135deg, #333, #444);
    --marquee-text: #fff;
    --search-bg: #333;
    --search-text: #fff;
    --search-border: #555;
    --search-placeholder: #ccc;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', 'Yu Gothic UI', 'Meiryo UI', 'MS PGothic', 'Osaka', sans-serif;
    background: var(--bg-body);
    min-height: 100vh;
    color: #fff;
    overflow-x: hidden;
    position: relative;
    padding-top: 20px;
    width: 100%;
    max-width: 100vw;
    font-weight: 400;
    letter-spacing: 0.05em;
  }

  .container {
    padding: 20px 20px 20px 20px;
    max-width: 1400px;
    margin: 0 auto;
    perspective: 1000px;
    position: relative;
    z-index: 1;
    width: 100%;
    box-sizing: border-box;
  }

  .grid, .button-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, 140px);
    gap: 40px;
    margin-bottom: 50px;
    padding: 20px;
    width: 100%;
    box-sizing: border-box;
    justify-content: center;
  }

  .button-grid {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    max-width: 600px;
    margin: 0 auto 50px auto;
    gap: 20px;
  }


  @media (max-width: 768px) {
    .grid {
      grid-template-columns: repeat(auto-fit, 140px);
      gap: 30px;
      padding: 30px;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    body {
      padding-top: 15px;
    }

    .grid {
      grid-template-columns: repeat(auto-fit, 140px);
      gap: 20px;
      padding: 15px;
      justify-content: center;
    }
    
    .container {
      padding: 15px;
    }
  }
</style>