---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', 'Yu Gothic UI', 'Meiryo UI', 'MS PGothic', 'Osaka', sans-serif;
    background: linear-gradient(to bottom, #f5f5dc 0%, #faf0e6 50%, #f5f5dc 100%);
    min-height: 100vh;
    color: #fff;
    overflow-x: hidden;
    position: relative;
    padding-top: 60px;
    width: 100%;
    max-width: 100vw;
    font-weight: 400;
    letter-spacing: 0.05em;
  }

  .container {
    padding: 20px;
    max-width: 1400px;
    margin: 0 auto;
    perspective: 1000px;
    position: relative;
    z-index: 1;
    width: 100%;
    box-sizing: border-box;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, 140px);
    gap: 40px;
    margin-bottom: 50px;
    padding: 40px;
    width: 100%;
    box-sizing: border-box;
    justify-content: center;
  }


  @media (max-width: 768px) {
    .grid {
      grid-template-columns: repeat(auto-fit, 140px);
      gap: 30px;
      padding: 30px;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    body {
      padding-top: 50px;
    }

    .grid {
      grid-template-columns: repeat(auto-fit, 140px);
      gap: 20px;
      padding: 20px;
      justify-content: center;
    }
    
    .container {
      padding: 15px;
    }
  }
</style>