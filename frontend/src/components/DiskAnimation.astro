---
// 3D disk animation background for light theme
---

<div class="disk-box">
  <div class="disk-item"></div>
  <div class="disk-item"></div>
  <div class="disk-item"></div>
  <div class="disk-item"></div>
</div>

<style>
  .disk-box {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: -1;
    perspective: 800px;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  /* Hide disk animation in dark theme */
  :global([data-theme="dark"]) .disk-box {
    opacity: 0;
  }

  .disk-item {
    position: absolute;
    top: 50%;
    left: 50%;
    border-radius: 50%;
    animation-iteration-count: infinite;
    animation-timing-function: cubic-bezier(0.645, 0.045, 0.355, 1);
  }

  .disk-item:nth-child(1) {
    width: 40vw;
    height: 40vw;
    max-width: 500px;
    max-height: 500px;
    margin: -20vw 0 0 -20vw;
    background: linear-gradient(45deg, #ff6b6b, #ee5a52);
    animation: disk1 6s infinite;
    opacity: 0.8;
  }

  .disk-item:nth-child(2) {
    width: 30vw;
    height: 30vw;
    max-width: 400px;
    max-height: 400px;
    margin: -15vw 0 0 -15vw;
    background: linear-gradient(45deg, #4ecdc4, #44a08d);
    animation: disk2 4s infinite;
    animation-delay: -1s;
    opacity: 0.7;
  }

  .disk-item:nth-child(3) {
    width: 35vw;
    height: 35vw;
    max-width: 450px;
    max-height: 450px;
    margin: -17.5vw 0 0 -17.5vw;
    background: linear-gradient(45deg, #ffd93d, #f39c12);
    animation: disk3 8s infinite;
    animation-delay: -2s;
    opacity: 0.6;
  }

  .disk-item:nth-child(4) {
    width: 25vw;
    height: 25vw;
    max-width: 350px;
    max-height: 350px;
    margin: -12.5vw 0 0 -12.5vw;
    background: linear-gradient(45deg, #a8e6cf, #7fcdcd);
    animation: disk4 5s infinite;
    animation-delay: -3s;
    opacity: 0.9;
  }

  @keyframes disk1 {
    0% {
      transform: rotateX(0deg) rotateY(0deg) rotateZ(0deg) scale(1);
    }
    25% {
      transform: rotateX(90deg) rotateY(90deg) rotateZ(45deg) scale(1.2);
    }
    50% {
      transform: rotateX(180deg) rotateY(180deg) rotateZ(90deg) scale(0.8);
    }
    75% {
      transform: rotateX(270deg) rotateY(270deg) rotateZ(135deg) scale(1.1);
    }
    100% {
      transform: rotateX(360deg) rotateY(360deg) rotateZ(180deg) scale(1);
    }
  }

  @keyframes disk2 {
    0% {
      transform: rotateX(45deg) rotateY(0deg) rotateZ(90deg) scale(0.8);
    }
    30% {
      transform: rotateX(135deg) rotateY(120deg) rotateZ(180deg) scale(1.3);
    }
    60% {
      transform: rotateX(225deg) rotateY(240deg) rotateZ(270deg) scale(0.7);
    }
    100% {
      transform: rotateX(405deg) rotateY(360deg) rotateZ(450deg) scale(0.8);
    }
  }

  @keyframes disk3 {
    0% {
      transform: rotateX(30deg) rotateY(45deg) rotateZ(0deg) scale(1.1);
    }
    20% {
      transform: rotateX(120deg) rotateY(135deg) rotateZ(72deg) scale(0.9);
    }
    40% {
      transform: rotateX(210deg) rotateY(225deg) rotateZ(144deg) scale(1.4);
    }
    60% {
      transform: rotateX(300deg) rotateY(315deg) rotateZ(216deg) scale(0.6);
    }
    80% {
      transform: rotateX(390deg) rotateY(405deg) rotateZ(288deg) scale(1.2);
    }
    100% {
      transform: rotateX(390deg) rotateY(405deg) rotateZ(360deg) scale(1.1);
    }
  }

  @keyframes disk4 {
    0% {
      transform: rotateX(60deg) rotateY(30deg) rotateZ(120deg) scale(1.3);
    }
    40% {
      transform: rotateX(180deg) rotateY(150deg) rotateZ(240deg) scale(0.5);
    }
    80% {
      transform: rotateX(300deg) rotateY(270deg) rotateZ(360deg) scale(1.5);
    }
    100% {
      transform: rotateX(420deg) rotateY(390deg) rotateZ(480deg) scale(1.3);
    }
  }

  @media (max-width: 768px) {
    .disk-item:nth-child(1) {
      width: 50vw;
      height: 50vw;
      max-width: 300px;
      max-height: 300px;
      margin: -25vw 0 0 -25vw;
    }

    .disk-item:nth-child(2) {
      width: 40vw;
      height: 40vw;
      max-width: 250px;
      max-height: 250px;
      margin: -20vw 0 0 -20vw;
    }

    .disk-item:nth-child(3) {
      width: 45vw;
      height: 45vw;
      max-width: 280px;
      max-height: 280px;
      margin: -22.5vw 0 0 -22.5vw;
    }

    .disk-item:nth-child(4) {
      width: 35vw;
      height: 35vw;
      max-width: 220px;
      max-height: 220px;
      margin: -17.5vw 0 0 -17.5vw;
    }
  }
</style>