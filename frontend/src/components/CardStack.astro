---
interface Props {
  text?: string;
  category: string;
  type?: 'normal' | 'holographic';
}

const { text = 'Portfolio', category, type = 'normal' } = Astro.props;
---

<div class={`card-stack ${type === 'holographic' ? 'holographic' : ''}`} data-category={category}>
  <div class="stack-card"></div>
  <div class="stack-card"></div>
  <div class="stack-card"></div>
  <div class="stack-card"></div>
  <div class="stack-card">
    <div class="stack-top">{text}</div>
  </div>
</div>

<style>
  .card-stack {
    aspect-ratio: 3/4;
    position: relative;
    margin: 20px;
    transform-style: preserve-3d;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .card-stack:hover {
    transform: translateY(-10px) scale(1.05);
  }

  .card-stack.active {
    transform: translateY(-10px) scale(1.05);
  }

  .stack-card {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 8px;
    background: linear-gradient(135deg, #ffd700, #b8860b);
    border: 1px solid rgba(218, 165, 32, 0.3);
    backdrop-filter: blur(5px);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }

  .stack-card:nth-child(1) {
    transform: translateZ(0px) rotateZ(-2deg);
    z-index: 1;
  }

  .stack-card:nth-child(2) {
    transform: translateZ(8px) rotateZ(1deg);
    z-index: 2;
  }

  .stack-card:nth-child(3) {
    transform: translateZ(16px) rotateZ(-1deg);
    z-index: 3;
  }

  .stack-card:nth-child(4) {
    transform: translateZ(24px) rotateZ(1.5deg);
    z-index: 4;
  }

  .stack-card:nth-child(5) {
    transform: translateZ(32px) rotateZ(-0.5deg);
    z-index: 5;
  }

  .stack-top {
    font-size: clamp(0.6rem, 3vw, 1.2rem);
    font-weight: 400;
    color: #000;
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    letter-spacing: 0.05em;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 90%;
    padding: 0 5px;
    font-family: 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', 'Yu Gothic UI', 'Meiryo UI', 'MS PGothic', 'Osaka', sans-serif;
  }

  .card-stack.holographic .stack-card {
    background: linear-gradient(135deg, #ffd700, #b8860b, #ffa500, #ffb347);
    background-size: 400% 400%;
    animation: holographicShimmer 3s ease-in-out infinite;
  }

  .card-stack.holographic::after {
    content: "HOLO";
    position: absolute;
    top: 8px;
    right: 8px;
    background: linear-gradient(45deg, #FF6B6B, #4ECDC4, #45B7D1, #96CEB4, #FFEAA7);
    color: #000;
    font-size: 8px;
    font-weight: bold;
    padding: 2px 6px;
    border-radius: 3px;
    z-index: 11;
    text-shadow: none;
    box-shadow: 0 0 8px rgba(255, 107, 107, 0.6);
  }

  @keyframes holographicShimmer {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>